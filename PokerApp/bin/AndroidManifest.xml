<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bscofyp.pokerapp"
    android:versionCode="3"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bscofyp.pokerapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bscofyp.pokerapp.GameInterface"
            android:label="@string/title_activity_game_interface"
            android:parentActivityName="com.bscofyp.pokerapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bscofyp.pokerapp.MainActivity" />
        </activity>
        <activity
            android:name="com.bscofyp.pokerapp.ReadRules"
            android:label="@string/title_activity_read_rules"
            android:parentActivityName="com.bscofyp.pokerapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:screenOrientation="landscape"
                android:value="com.bscofyp.pokerapp.MainActivity" />
        </activity>
        <activity
            android:name="com.bscofyp.pokerapp.Help"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name="com.bscofyp.pokerapp.HelpCategoryListActivity"
            android:label="@string/title_helpcategory_list" >
        </activity>
        <activity
            android:name="com.bscofyp.pokerapp.HelpCategoryDetailActivity"
            android:label="@string/title_helpcategory_detail"
            android:parentActivityName="com.bscofyp.pokerapp.HelpCategoryListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bscofyp.pokerapp.HelpCategoryListActivity" />
        </activity>
        <activity
            android:name="com.bscofyp.pokerapp.HelpOverview"
            android:label="@string/title_activity_help_overview" >
        </activity>
        <activity
            android:name="com.bscofyp.pokerapp.HelpDetail"
            android:label="@string/title_activity_help_detail" >
        </activity>
        <activity
            android:name="com.bscofyp.pokerapp.EndScreen"
            android:label="@string/title_activity_end_screen" >
        </activity>
    </application>

</manifest>
